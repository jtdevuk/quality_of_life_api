<h1 class="text-center mt-3 mb-5">Your Shortlisted Places</h1>
<% if current_user.places.any? %>
  <div class="row">
    <% current_user.places.each do |place| %>
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= place.name %></h5>
            <%# <p class="card-text">With supporting text below as a natural lead-in to additional content.</p> %>
            <%= render "shared/graph", place: place %>
            <a href="#" class="btn btn-primary">Something</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
<% else %>
  <p>You don't have any shortlisted places, you can search for your dream location on the home page!</p>
<% end %>
