<div class="col-sm-6">
  <div class="card m-3">
    <div class="card-body">
      <h5 class="card-title text-center"><%= place.name %></h5>
      <%= render "shared/graph", place: place %>
      <div class="text-center m-3">
        <%= link_to "Show Full Details", place_path(place), class: "btn btn-info btn-sm" %>
        <%= link_to "Remove From Shortlist", place_path(place), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>
</div>